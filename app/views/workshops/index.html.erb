
<div id="workshop-index-banner">
  <div>
    <img src="https://res.cloudinary.com/yileijiang/image/upload/v1606228589/ateliers%20celine/workshop_index_zuibmj.jpg" alt="BEA BONAFINI">
  </div>
    <div id="workshop-index-yellow-shape">
  </div>
  <div id="workshop-index-title">
    <h1>
      Abstract Painting <br>
      Atelier <br>
      BEA BONAFINI
    </h1>
    <br>
    <div class="rectangle"> </div>
    <br>
    <br>
    <h4>Discover Bea Bonafini painting techniques to transform your home in a contemporary exhibition</h4>
    <%= link_to "Join Now", subscriptions_path, class: "button-pink" %>
  </div>
</div>

<div class="container">
  <h1>Choose Your Atelier</h1>
  <br>
  <div class="rectangle"> </div>

  <h4>Categories:</h4>
  <div id="workshop-index-categories">
    <div class="workshop-index-category">
      <i class="fas fa-circle red-ball"></i>
      <h5>TRADITIONAL</h5>
    </div>
      <div class="workshop-index-category">
        <i class="fas fa-circle blue-ball"></i>
      <h5>FUNCTIONAL</h5>
    </div>
      <div class="workshop-index-category">
        <i class="fas fa-circle yellow-ball"></i>
      <h5>DISRUPTIVE</h5>
    </div>
      <div class="workshop-index-category">
        <i class="fas fa-circle lightblue-ball"></i>
      <h5>CONTEMPORARY</h5>
    </div>
    </div>
</div>

<div class="center">
  <div class="index-cards">
    <% @workshops.each do |workshop| %>
     <% background_url = cl_image_path workshop.photo.key, width: 300, height: 400, crop: :fill %>
      <div class="test">
        <div class="index-card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= background_url %>')">
          </div>
            <p> <strong><%= workshop.name %></strong> </p>
            <p><%= workshop.user.first_name %></p>
            <p style="font-size: 15px; color: #455CC7; font-weight: bold;"><%= workshop.category.upcase %></p>
            <%= link_to "Discover", workshop_path(workshop), class: "button-minimal-thicker" %>
      </div>
    <% end %>
  </div>
</div>
